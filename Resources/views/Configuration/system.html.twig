{% endif %}
{% import 'OroConfigBundle::macros.html.twig' as configUI %}

{% set pageTitle = 'Configuration' %}

{% block content %}
    {{ configUI.renderTitleAndSearch(pageTitle is defined ? pageTitle : '', []) }}
