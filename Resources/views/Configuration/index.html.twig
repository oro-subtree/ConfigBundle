{% extends bap.layout %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% block content %}
    {% set pageTitle = 'Configuration' %}
    {% set buttons = [
            UI.addButton({
                path:   'javascript:void(0);',
                aClass: 'no-hash btn-info oro-config-refresh',
                title:  'Refresh',
                label:  'Refresh',
            })
        ]
    %}

    <div class="container-fluid">
        <h1>{{ (pageTitle is defined ? pageTitle : '')|trans }}
            {% if buttons is defined %}
                {% for button in buttons %}
                    {{ button }}
                {% endfor %}
            {% endif %}
        </h1>

        <div class="row">
            <div class="span6 pull-left">
                {% if data is defined %}
                    {{ dump(data) }}
                {% endif %}
            </div>
        </div>
    </div>

    <script type="text/javascript">
        (function() {
            $(function() {
                $('.oro-config-refresh').click(_.bind(Oro.hashNavigationInstance.refreshPage, Oro.hashNavigationInstance));
            });
        }());
    </script>
{% endblock content %}
