{% extends bap.layout %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroConfigBundle::macros.html.twig' as __ %}

{% block content %}
    {% set pageTitle = 'Configuration' %}

    {% set buttons = [
            UI.saveAndStayButton(),
            UI.saveAndCloseButton()
        ]
    %}

    {{ __.renderTitleAndSearch(pageTitle is defined ? pageTitle : '', buttons) }}

    {% set currentTab = {
            label: 'Localization',
            description: 'Some additional information about possible localization setup and real need of localization settings (help block)',
            children: [
                {
                    label: 'Locale options',
                    children: [
                        '<div class="control-group">
                            <label class="control-label" for="orocrm_config_form_date_format">Date format</label>
                            <div class="controls">
                                <input type="text" id="orocrm_config_form_date_format" name="orocrm_config_form[locale][date_format]">
                            </div>
                        </div>'
                    ]
                }
            ]
        }
    %}

    {% set DATA = {
        formData: [
                {
                    name: 'platform',
                    label: 'Platform',
                    icon: 'icon-hdd',
                    children: [
                        {
                            label: 'General setup',
                            children: [
                                {
                                    name: 'localiztion_settings',
                                    label: 'Localization',
                                    icon: 'icon-time',
                                },
                                {
                                    name: 'themes_settings',
                                    label: 'Themes',
                                }
                            ]
                        }
                    ]
                }, {
                    name: 'sales',
                    label: 'Sales',
                    children: [
                        {
                            label: 'Customers',
                            children: [
                                {
                                    label: 'Login options',
                                    name:  'login_options'
                                }
                            ]
                        }
                    ]
                }
            ],
            current: currentTab
        }
    %}

    {{ __.renderScrollData(DATA) }}
{% endblock content %}
